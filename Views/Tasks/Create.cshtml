@model homework_56.Models.Task
@{
    ViewBag.Title = "Add task";
    Layout = "_Layout";
}
<h2>Fill form for adding new task</h2>
<div class="row">
    <div class="tasks_add_form col-md-6">
        <form asp-action="Create" asp-controller="Tasks" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form_row">
                <label for="">
                    Task's 'Name<br />
                    <input asp-for="Name" type="text">
                </label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form_row">
                <label for="">
                    Priority<br />
                    <select asp-for="Priority">
                        <option selected="selected" value="@null">choose priority</option>
                        <option value="c">low</option>
                        <option value="b">medium</option>
                        <option value="a">high</option>
                    </select>
                </label>
                <span asp-validation-for="Priority"></span>
                <div class="form_row">
                    <label for="">
                        Description<br />
                        <textarea asp-for="Description" type="text"></textarea>
                    </label>
                    <span asp-validation-for="Description"></span>
                </div>
                <button type="submit">Add</button>
        </form>
    </div>
</div>
